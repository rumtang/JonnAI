      "val": 6,
      "meta": {
        "capability": "Generates marketing content from structured briefs while maintaining brand voice consistency",
        "autonomy": "supervised",
        "tools": ["Brand voice checker", "Readability analyzer", "Plagiarism detector", "Tone calibrator"]
      }
    },
    {
      "id": "seo-agent",
